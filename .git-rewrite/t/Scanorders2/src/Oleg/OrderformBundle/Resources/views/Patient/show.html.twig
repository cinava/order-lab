{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% block content %}
    <h1>Patient</h1>

    <table class="record_properties table table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Mrn</th>
                <td>{{ entity.mrn|first }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name|first }}</td>
            </tr>
            <tr>
                <th>Procedures</th>
                <td>
                    {#{{ entity.specimen }}#}
                    {% for specimen in entity.procedure %}
                        <a href="{{ path('specimen_show', { 'id': specimen.id }) }}">
                            Specimen: ID={{ specimen.id }}, MRN={{ specimen.name|first }}, patientId={{ specimen.patient.id }}<br>
                        </a>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('patient') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('patient_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('patient_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
