{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Educational</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Goal</th>
                <td>{{ entity.goal }}</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>{{ entity.course }}</td>
            </tr>
            <tr>
                <th>Lesson</th>
                <td>{{ entity.lesson }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('educational') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('educational_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('educational_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
