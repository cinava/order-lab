{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Scan</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            {#<tr>#}
                {#<th>Mag</th>#}
                {#<td>{{ entity.mag }}</td>#}
            {#</tr>#}
            <tr>
                <th>Scanregion</th>
                <td>{{ entity.scanregion }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ entity.note }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('scan') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('scan_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('scan_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
