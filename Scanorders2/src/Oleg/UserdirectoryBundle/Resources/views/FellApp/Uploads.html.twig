
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}
{% import "OlegUserdirectoryBundle::Profile/edit_user.html.twig" as userform %}

<!-- Uploads -->
<div class="panel panel-info">

<div class="panel-heading">
    <h4 class="panel-title">
        <a data-toggle="collapse" href="#uploads">
            Uploads
        </a>
    </h4>
</div>

<div id="uploads" class="panel-collapse collapse in">
    <div class="panel-body">


        <div class="well">
            <label class="col-xs-12 control-label">Applicant Photo</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {{ usermacros.fileuploadLabelField( form.user.avatar, cycle, 'avatar', '' ) }}

                </div>
            </div>
        </div>


        <div class="well">
            <label class="col-xs-12 control-label">Curriculum Vitae (CV)</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {#{% if formfield.documents is defined or prototype == 'prototype' %}#}
                        {#{{ usermacros.fileuploadLabelField( form.user.credentials.cvs, cycle, classname, 'noprototype' ) }}#}
                    {#{% endif %}#}

                    {% for cv in form.user.credentials.cvs %}
                        {{ userform.cvsForm(cv,cycle,'user-cvs','noprototype') }}
                    {% endfor %}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">Cover Letter and/or Personal Statement</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% for coverLetter in form.vars.value.coverLetters %}
                        {{ userform.cvsForm(coverLetter,cycle,'user-coverLetters','noprototype') }}
                    {% endfor %}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">USMLE Scores</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% for examination in form.user.credentials.vars.value.examinations %}
                        {% for score in examination.scores %}
                            {{ userform.cvsForm(score,cycle,'user-scores','noprototype') }}
                        {% endfor %}
                    {% endfor %}

                </div>
            </div>
        </div>


    </div> <!-- panel-body -->
</div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->


