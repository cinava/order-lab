
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}

<!-- Uploads -->
<div class="panel panel-info">

<div class="panel-heading">
    <h4 class="panel-title">
        <a data-toggle="collapse" href="#uploads">
            Uploads
        </a>
    </h4>
</div>

<div id="uploads" class="panel-collapse collapse in">
    <div class="panel-body">


        <div class="well">
            <label class="col-xs-12 control-label">Applicant Photo</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {#{{ usermacros.fileuploadLabelField( form.user.avatar, cycle, 'avatar', '' ) }}#}
                    {#{{ usermacros.singleUploadWell(form.user.vars.value.avatar,cycle,'user-avatar','noprototype') }}#}
                    {{ usermacros.avatarForm(entity.user,cycle) }}

                </div>
            </div>
        </div>


        <div class="well">
            <label class="col-xs-12 control-label">Curriculum Vitae (CV)</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% if form.user.credentials.cvs is defined %}
                        {% for cv in form.user.credentials.cvs %}
                            {{ usermacros.fileuploadLabelField( cv, cv.documents, cycle, 'user-cvs', 'noprototype' ) }}
                        {% endfor %}
                    {% endif %}

                    {% do form.user.credentials.cvs.setRendered %}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">Cover Letter and/or Personal Statement</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {{ usermacros.fileuploadLabelField( form, form.coverLetters, cycle, 'user-coverLetters', 'noprototype', form.coverLetters ) }}

                    {% do form.coverLetters.setRendered %}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">USMLE Scores</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% if form.user.credentials.examinations is defined %}
                        {% for examination in form.user.credentials.examinations %}
                            {{ usermacros.fileuploadLabelField( examination, examination.scores, cycle, 'user-scores', 'noprototype' ) }}
                        {% endfor %}
                    {% endif %}

                    {% do form.user.credentials.examinations.setRendered %}

                </div>
            </div>
        </div>


    </div> <!-- panel-body -->
</div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->


