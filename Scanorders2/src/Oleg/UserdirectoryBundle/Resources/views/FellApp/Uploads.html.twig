
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}

<!-- Uploads -->
<div class="panel panel-info">

<div class="panel-heading">
    <h4 class="panel-title">
        <a data-toggle="collapse" href="#uploads">
            Uploads
        </a>
    </h4>
</div>

<div id="uploads" class="panel-collapse collapse in">
    <div class="panel-body">


        <div class="well">
            <label class="col-xs-12 control-label">Applicant Photo</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    form.user.avatar:{{ form.user.vars.value.avatar }}
                    {#{{ usermacros.fileuploadLabelField( form.user.avatar, cycle, 'avatar', '' ) }}#}
                    {#{{ usermacros.singleUploadWell(form.user.vars.value.avatar,cycle,'user-avatar','noprototype') }}#}
                    {{ usermacros.avatarForm(entity.user,cycle) }}

                </div>
            </div>
        </div>


        <div class="well">
            <label class="col-xs-12 control-label">Curriculum Vitae (CV)</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% if form.user.credentials.cvs is defined %}
                        {% for cv in form.user.credentials.cvs %}
                            {% if cv is defined and cv != null %}
                                cvs:{{ cv.documents|length }}
                                {#formfield, cycle, classname, prototype, containerDocuments, documentsPrototype#}
                                {{ usermacros.fileuploadLabelField( cv, cycle, 'user-cvs', 'noprototype' ) }}
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    {#{% for cv in form.user.credentials.cvs %}#}
                        {#{{ usermacros.singleUploadWell(cv,cycle,'user-cvs','noprototype') }}#}
                    {#{% endfor %}#}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">Cover Letter and/or Personal Statement</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {#{{ usermacros.singleUploadWell(form,cycle,'user-coverLetters','noprototype','nocontrolbtn',form.coverLetters,'coverLetters-prototype') }}#}
                    {{ usermacros.fileuploadLabelField( form, cycle, 'user-cvs', 'noprototype', form.coverLetters ) }}

                </div>
            </div>
        </div>

        <div class="well">
            <label class="col-xs-12 control-label">USMLE Scores</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% for examination in form.user.credentials.vars.value.examinations %}
                        {#{{ usermacros.fileuploadLabelField( examination, cycle, 'user-cvs', 'noprototype', examination.scores, 'scores-prototype' ) }}#}

                        {#{% for score in examination.scores %}#}
                            {#{{ usermacros.singleUploadWell(examination,cycle,'user-scores','noprototype','nocontrolbtn',examination.scores,'scores-prototype') }}#}
                        {#{% endfor %}#}
                    {% endfor %}

                </div>
            </div>
        </div>


    </div> <!-- panel-body -->
</div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->


