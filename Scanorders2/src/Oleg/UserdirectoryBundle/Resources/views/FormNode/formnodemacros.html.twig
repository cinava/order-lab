{% macro dropdownField( formNodeHolder, formNode, formNodeValue, cycle, prototype, multiple ) %}
    {% set fieldname = "formnode-"~formNode.id %}

    {#get dropdown values by getDropdownValue (user_formnode_utility)#}
    {% set dropdownValues = user_formnode_utility.getDropdownValue(formNode) %}

    {#dropdownValues={{ dropdownValues|length }}#}

    {% if cycle != 'show' %}
        {% set disabled = "" %}
    {% else %}
        {% set disabled = "disabled" %}
    {% endif %}

    {% if multiple == 'multiple' %}
        {#multiple="multiple"#}
        {% set multipleOption = 'multiple="multiple"' %}
    {% else %}
        {% set multipleOption = '' %}
    {% endif %}

    <select
            id="oleg_userdirectorybundle_formnode_{{ formNode.id }}"
            name="{{ fieldname }}"
            class="combobox"
            data-placeholder="{{ formNode.placeholder }}"
            {{ disabled }}
            {{ multipleOption }}
    >
        <option value=""></option>
        {% for dropdownValue in dropdownValues %}
            {###########dropdownValue.text:{{ dropdownValue.text }}#}
            {#{% if dropdownValue.id == formNodeValue %} #}
            {% if formNodeValue and dropdownValue.text == formNodeValue %}
                <option value="{{ dropdownValue.id }}" selected>{{ dropdownValue.text }}</option>
            {% else %}
                <option value="{{ dropdownValue.id }}">{{ dropdownValue.text }}</option>
            {% endif %}
        {% endfor %}
    </select>

{% endmacro %}


