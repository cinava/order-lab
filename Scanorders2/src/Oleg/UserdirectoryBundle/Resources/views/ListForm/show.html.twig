{% extends "OlegUserdirectoryBundle::Default/base.html.twig" %}

{% import "OlegUserdirectoryBundle::ListForm/listmacros.html.twig" as listmacros %}

{% block title %}
    {{ displayName }}: ID {{ entity.id }} | Show
{% endblock %}

{% block content %}

    <h3 class="text-info">{{ displayName }}: ID {{ entity.id }}</h3>

    <br />

    {{ listmacros.listEdit( entity, edit_form, delete_form, pathbase, 'show' ) }}


    {% if displayName == "Locations" %}
        <p>
            <a href="{{ path(employees_sitename~'_show_location',{id:entity.id}) }}">
                Full Location Management
            </a>
        </p>
    {% endif %}

{% endblock %}
