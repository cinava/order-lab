<!DOCTYPE html>

<html>

<head>

    {% stylesheets
    'bundles/oleguserdirectory/bootstrap/css/*' filter='cssrewrite'
    'bundles/oleguserdirectory/form/css/form.css' filter='cssrewrite'
    %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}

    <title>Maintanence</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

</head>


<body>

{#{% import "OlegOrderformBundle::Default/formmacros.html.twig" as myform %}#}

<div class="container">

    <div class="text-center">

        {% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}
        {{ usermacros.nonLiveSiteWarning() }}

        <h2 class="alert alert-info well-lg safary-fix" align="center">Maintenance</h2>

        <br>

        <p>
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        </p>

        <br>

        <p>
        <h4>
            {{ param.getMaintenanceloginmsgWithDate() }}
        </h4>
        </p>

        <br>
        <p>
            <a href="{{ path('main_common_home') }}">Return to Home page</a>
        </p>


        {% include 'OlegUserdirectoryBundle::Default/footer.html.twig' %}

    </div> <!-- /text-center -->

</div> <!-- /container -->

</body>

</html>
