<html>

<head>

    {% stylesheets
    'bundles/oleguserdirectory/bootstrap/css/*' filter='cssrewrite'
    'bundles/oleguserdirectory/form/css/form.css' filter='cssrewrite'
    %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}

    <title>Currently Undergoing Maintenance</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}
    {{ usermacros.nonLiveSiteRedirect() }}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

</head>


<body>


<div class="container">

    <div class="text-center">

        {{ usermacros.nonLiveSiteWarning() }}

        <h2 class="alert alert-info well-lg safary-fix" align="center">
            Currently Undergoing Maintenance
        </h2>

        <br>
        <br>
        <br>

        <p>
            <img src="{{ asset('bundles/oleguserdirectory/form/img/comingsoon.jpg') }}" alt="Coming Soon">
        </p>

        <br>
        <br>
        <br>

        {% include 'OlegUserdirectoryBundle::Default/footer.html.twig' %}

    </div> <!-- /text-center -->

</div> <!-- /container -->

</body>

</html>

