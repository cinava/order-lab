

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#vacreq-organizational-group-{{ organizationalGroupId }}">
                {{ organizationalGroupName }}
            </a>
            {#{{ vacreqmacros.request_radio_choice( form.requestVacation ) }}#}
        </h4>
    </div>
    <div id="vacreq-organizational-group-{{ organizationalGroupId }}" class="panel-collapse collapse in">
        <div class="panel-body">

            <div class="well">
            <h5>Approver(s)</h5>
            {% for approver in approvers %}

                <p>
                    {{ approver }}
                </p>

            {% endfor %}
            </div>

            <div class="well">
            <h5>Submitter(s)</h5>
            {% for submitter in submitters %}

                <p>
                    {{ submitter }}
                </p>

            {% endfor %}
            </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->
</div> <!-- panel panel-info -->


