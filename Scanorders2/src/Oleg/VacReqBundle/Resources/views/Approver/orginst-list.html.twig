

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">

            <div class="row">
                <div class="col-xs-6" align="right">
                    <a data-toggle="collapse" href="#vacreq-organizational-group-{{ organizationalGroupId }}">
                        {{ organizationalGroupName }}
                    </a>
                </div>
                <div class="col-xs-6" align="left">
                    <a class="btn-sm btn-info" href="{{ path(vacreq_sitename~'_orginst_management', { 'institutionId': organizationalGroupId }) }}">Manage</a>
                    {#<a class="btn-sm btn-danger" href="#">Delete</a>#}
                </div>
            </div>

        </h4>
    </div>
    <div id="vacreq-organizational-group-{{ organizationalGroupId }}" class="panel-collapse collapse in">
        <div class="panel-body">

            <div class="well">
            <h5>Approver(s)</h5>
            {% for approver in approvers %}

                <p>
                    {{ approver }} ({{ approver.getSiteRoles('APPROVER')|join(', ') }})
                </p>

            {% endfor %}
            </div>

            <div class="well">
            <h5>Submitter(s)</h5>
            {% for submitter in submitters %}

                <p>
                    {{ submitter }} ({{ submitter.getSiteRoles('SUBMITTER')|join(', ') }})
                </p>

            {% endfor %}
            </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->
</div> <!-- panel panel-info -->


