{% extends "OlegVacReqBundle::Default/base.html.twig" %}

{% block title %}
    Vacation/Business Request Groups
{% endblock %}


{% block content %}


    <h4 class="text-info" align="center">
        Vacation/Business Request Groups
    </h4>


    <p>
        <button type="button" class="btn btn-default btn-sm" onClick="collapseAll()" >Collapse All</button>
        <button type="button" class="btn btn-default btn-sm" onClick="extendAll()" >Expand All</button>
    </p>

    <br>

    {% for organizationalInstitution in organizationalInstitutions %}

        <p>
            {{ render(controller('OlegVacReqBundle:Approver:organizationalInstitution', { 'institutionId': organizationalInstitution.id })) }}
        </p>

    {% endfor %}


    <a general-data-confirm="Are you sure you want to create a new organizational group by creating approver and submiiter roles?"
       class="btn-sm btn-warning" href="{{ path('vacreq_group_add') }}">Add Group</a>


{% endblock %}


