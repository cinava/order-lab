{% extends "OlegVacReqBundle::Default/base.html.twig" %}

{% block title %}
    My Group
{% endblock %}


{% block content %}


    <h4 class="text-info" align="center">
        My Group
    </h4>

    <div class="well well-sm">
        {{ yearRange }} Accrued Vacation Days as of today: {{ accruedDays }}
    </div>

    {#<br>#}
    <p>
        <button type="button" class="btn btn-default btn-sm" onClick="collapseAll()" >Collapse All</button>
        <button type="button" class="btn btn-default btn-sm" onClick="extendAll()" >Expand All</button>
    </p>
    {#<br>#}

    {% for group in groups %}
        {#group: {{ group.name }}#}
        <p>
            {{ render(controller('OlegVacReqBundle:Approver:mySingleGroup', { 'groupId': group.id })) }}
        </p>

    {% endfor %}


{% endblock %}


