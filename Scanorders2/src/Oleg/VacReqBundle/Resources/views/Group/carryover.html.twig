{% extends "OlegVacReqBundle::Default/base.html.twig" %}

{% import "OlegOrderformBundle::Default/formmacros.html.twig" as formmacros %}

{% block title %}
    Carry Over Vacation Days for {{ subjectUser }}
{% endblock %}


{% block content %}


    <h4 class="text-info" align="center">
        Carry Over Vacation Days for {{ subjectUser }}
    </h4>

    <br>

    {{ form_start(form) }}

        {{ form_errors(form) }}

        {% for carryOver in form.carryOvers %}
            {{ formmacros.field(carryOver.year) }}
            {{ formmacros.field(carryOver.days) }}
        {% endfor %}

        <p>
            <button class="btn btn-info" name="btnCreate" type="submit">Update</button>
        </p>

    {{ form_end(form) }}

{% endblock %}

