
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}


<div class="panel panel-info">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#Itinerary">
                Itinerary / Interview Schedule
            </a>
        </h4>
    </div>

    <div id="Itinerary" class="panel-collapse collapse in">
        <div class="panel-body">

            <div class="row withpaddingtop">
                <div class="col-xs-3"></div>
                <div class="col-xs-6">
                    {{ formmacros.fieldDateLabel_vertical(form.interviewDate,'allow-future-date') }}
                </div>
                <div class="col-xs-3"></div>
            </div>

            <div class="well form-element-holder user-itinerarys">
                {#<label class="col-xs-12 control-label">Complete Fellowship Application PDF</label>#}
                <div class="row withpaddingtop">

                    <div class="col-xs-12">
                        {{ usermacros.documentsContainer(null,form.itinerarys,cycle,'noprototype',8,'default') }}
                    </div>
                </div>
            </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->




