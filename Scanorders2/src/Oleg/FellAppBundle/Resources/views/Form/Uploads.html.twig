
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}

<!-- Uploads -->
<div class="panel panel-info">

<div class="panel-heading">
    <h4 class="panel-title">
        <a data-toggle="collapse" href="#uploads">
            Uploads
        </a>
    </h4>
</div>

<div id="uploads" class="panel-collapse collapse in">
    <div class="panel-body">


        {#<div class="well form-element-holder">#}
            {#<label class="col-xs-12 control-label">Applicant Photo</label>#}
            {#<div class="row withpaddingtop">#}
                {#<div class="col-xs-12">#}

                    {#&#123;&#35;{{ usermacros.fileuploadLabelField( form.user.avatar, cycle, 'avatar', '' ) }}&#35;&#125;#}
                    {#&#123;&#35;{{ usermacros.singleUploadWell(form.user.vars.value.avatar,cycle,'user-avatar','noprototype') }}&#35;&#125;#}
                    {#&#123;&#35;{{ usermacros.avatarForm(entity.user,cycle) }}&#35;&#125;#}

                {#</div>#}
            {#</div>#}
        {#</div>#}


        <div class="well form-element-holder user-CurriculumVitae">
            <label class="col-xs-12 control-label">Curriculum Vitae (CV)</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% if form.user.credentials.cvs is defined %}
                        {% for cv in form.user.credentials.cvs %}
                            {#{{ usermacros.fileuploadLabelField( null, cv.documents, cycle, 'user-cvs', 'noprototype' ) }}#}
                            {{ usermacros.documentsContainer(null,cv.documents,cycle,'noprototype',8,'default') }}
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        </div>


        <div class="well form-element-holder user-FellowshipApplication">
            <label class="col-xs-12 control-label">Cover Letter and/or Personal Statement</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {#{{ usermacros.fileuploadLabelField( null, form.coverLetters, cycle, 'user-coverLetters', 'noprototype' ) }}#}
                    {{ usermacros.documentsContainer(null,form.coverLetters,cycle,'noprototype',8,'default') }}

                </div>
            </div>
        </div>

        <div class="well form-element-holder user-Examination">
            <label class="col-xs-12 control-label">USMLE Scores</label>
            <div class="row withpaddingtop">
                <div class="col-xs-12">

                    {% if form.user.credentials.examinations is defined %}
                        {% for examination in form.user.credentials.examinations %}
                            {#{{ usermacros.fileuploadLabelField( null, examination.scores, cycle, 'user-scores', 'noprototype' ) }}#}
                            {{ usermacros.documentsContainer(null,examination.scores,cycle,'noprototype',8,'default') }}
                        {% endfor %}
                    {% endif %}

                </div>
            </div>
        </div>


        {% if is_granted('ROLE_FELLAPP_ADMIN') %}
            <div class="well form-element-holder user-Report">
                <label class="col-xs-12 control-label">Complete Fellowship Application PDF</label>
                <div class="row withpaddingtop">
                    <div class="col-xs-12">

                        {{ usermacros.documentsContainer(null,form.reports,cycle,'noprototype',8,'default') }}

                    </div>
                </div>
            </div>
        {% endif %}


    </div> <!-- panel-body -->
</div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->


