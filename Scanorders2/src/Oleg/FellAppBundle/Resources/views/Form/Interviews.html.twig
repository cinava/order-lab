
{% import "OlegFellAppBundle::Default/fellappmacros.html.twig" as interviewmacros %}
{% import "OlegUserdirectoryBundle::Default/usermacros.html.twig" as usermacros %}

<div class="panel panel-info">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#interviews">
                Interviews
            </a>
        </h4>
    </div>

    <div id="interviews" class="panel-collapse collapse in">
        <div class="panel-body">

            {#form.interviews:{{ form.interviews|length }}#}
            <div class="fellapp-interviews-holder">
                {% for interview in form.interviews %}

                    {{ interviewmacros.interviewForm(interview, cycle, 'fellapp-interviews', 'noprototype', sitename, 1) }}

                {% endfor %}

                {% if cycle != "show" %}
                    {{ usermacros.addNewObjectBtn(cycle,'fellapp-interviews','Add Interviewer') }}
                {% endif %}
            </div>


        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->
