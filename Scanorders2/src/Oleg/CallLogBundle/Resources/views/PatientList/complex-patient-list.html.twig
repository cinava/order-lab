                    {#{% endfor %}#}
                    {{ patient.obtainFullValidKeyName }}
                </td>

                <td class="rowlink-skip">
                    {{ calllogmacros.patientListAction(patient,patientListId,cycle) }}
                </td>

            </tr>

        {% endfor %}

