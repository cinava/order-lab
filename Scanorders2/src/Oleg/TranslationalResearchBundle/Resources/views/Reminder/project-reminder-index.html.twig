{% extends "OlegTranslationalResearchBundle::Default/base.html.twig" %}

{% import "OlegTranslationalResearchBundle::Default/transresRequestMacros.html.twig" as transresRequestMacros %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h4 class="text-info" align="center">
        {{ title|raw }}
    </h4>
    <br>

    <p>
        {% if entityCounter and entityCounter > 0 %}
            <a
                class="btn btn-primary"
                href="{{ path(sendemailpath) }}"
            >Send Reminder Emails</a>
        {% else %}
            {#There are no delayed projects corresponding to the site setting parameters#}
            {{ empty-message }}
        {% endif %}
    </p>
    <br>

    {% for state, entityGroups in finalResults %}

        {% if entityGroups|length > 0 %}

            <h3>{{ state }}</h3>

            {% for entityGroup in entityGroups %}
                    {% for entity in entityGroup %}

                        <p>
                            <a href="{{ path(show-path, {'id': entity.id}) }}">{{ entity.oid }}</a>
                        </p>

                    {% endfor %}
            {% endfor %}

        {% endif %}

    {% endfor %}

{% endblock %}
