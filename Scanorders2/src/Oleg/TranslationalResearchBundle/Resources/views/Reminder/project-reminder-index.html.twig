{% extends "OlegTranslationalResearchBundle::Default/base.html.twig" %}

{% import "OlegTranslationalResearchBundle::Default/transresRequestMacros.html.twig" as transresRequestMacros %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h4 class="text-info" align="center">
        {{ title|raw }}
    </h4>
    <br>

    <p>
        {% if projectCounter and projectCounter > 0 %}
            <a
                class="btn btn-primary"
                href="{{ path('translationalresearch_project_reminder_send') }}"
            >Send Reminder Emails</a>
        {% else %}
            There are no delayed projects corresponding to the site setting parameters
        {% endif %}
    </p>
    <br>

    {% for state, projectGroups in finalResults %}

        {% if projectGroups|length > 0 %}

            <h3>{{ transres_util.getStateLabelByName(state) }}</h3>

            {% for projectGroup in projectGroups %}
                    {% for project in projectGroup %}

                        <p>
                            <a href="{{ path('translationalresearch_project_show', {'id': project.id}) }}">{{ project.oid }}</a>
                        </p>

                    {% endfor %}
            {% endfor %}

        {% endif %}

    {% endfor %}

{% endblock %}
