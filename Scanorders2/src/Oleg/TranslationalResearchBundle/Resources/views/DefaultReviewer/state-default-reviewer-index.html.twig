{% extends "OlegTranslationalResearchBundle::Default/base.html.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}

    <h4 class="text-info" align="center">
        {{ title }}
    </h4>

    <table class="table table-hover table-condensed text-left table-bordered">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(defaultReviewers, 'Reviewer', 'reviewerInfos.displayName') }}</th>
                <th>{{ knp_pagination_sortable(defaultReviewers, 'reviewer Delegate', 'reviewerDelegate.displayName') }}</th>
                <th>{{ knp_pagination_sortable(defaultReviewers, 'Created', 'defaultReviewer.createDate') }}</th>
                <th>{{ knp_pagination_sortable(defaultReviewers, 'Review Stage', 'defaultReviewer.state') }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for defaultReviewer in defaultReviewers %}
            <tr>
                <td style="display: none"><a href="{{ path(translationalresearch_sitename~'_default-reviewer_show', { 'id': defaultReviewer.id }) }}">{{ defaultReviewer.id }}</a></td>
                <td>{{ defaultReviewer.reviewer }}</td>
                <td>{{ defaultReviewer.reviewerDelegate }}</td>
                <td>
                    {% if defaultReviewer.createDate %}
                        {{ defaultReviewer.createDate|date('Y-m-d H:i:s') }}
                    {% endif %}
                </td>
                <td>{{ defaultReviewer.state }}</td>

                <td class="rowlink-skip">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a href="{{ path(translationalresearch_sitename~'_default-reviewer_show', { 'id': defaultReviewer.id }) }}" target="_blank">Show Default Reviewer</a>
                            </li>
                            <li>
                                <a href="{{ path(translationalresearch_sitename~'_default-reviewer_edit', { 'id': defaultReviewer.id }) }}">Edit Default Reviewer</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path(translationalresearch_sitename~'_default-reviewer_new',{'stateStr':stateStr}) }}"
    >Create a new Default Reviewer</a>

{% endblock %}
