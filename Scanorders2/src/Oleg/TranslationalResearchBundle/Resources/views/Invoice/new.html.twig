        <p>
        <div class="row">
            <div class="col-xs-2" align="right">
            </div>
            <div class="col-xs-6" align="left">
                <img src="{{ asset(bundleFileName) }}" alt="Invoice Logo"/>
            </div>
            <div class="col-xs-4" align="left">
            </div>
        </div>
        </p>

        <br><br>
        {#<div class="row" align="left">#}
            {#<div class="col-xs-5">#}
                {#<img src="{{ asset(bundleFileName) }}" alt="Invoice Logo"/>#}
            {#</div>#}
            {#<div class="col-xs-7"></div>#}
        {#</div>#}
    {% endif %}

