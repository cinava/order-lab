<!DOCTYPE html>
<html>
    <head>
        
    <div class="order-content">
        {% block head %}
            
            {% stylesheets 
                '@OlegOrderformBundle/Resources/public/bootstrap/css/*' filter='cssrewrite' 
                '@OlegOrderformBundle/Resources/public/form/css/*'
            %}
                <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
            {% endstylesheets %}

            {% javascripts 
                '@OlegOrderformBundle/Resources/public/jquery/jquery-1.9.1.js'
                '@OlegOrderformBundle/Resources/public/bootstrap/js/*'   
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}                                                                   
                
            <title>{% block title %}{% endblock %} - Scan Order</title>                   
            
        {% endblock %}
    </head>
    <body>
        
        <div id="header">{% block header %}
            <img src="{{ asset('/../../images/slide1.jpg') }}" alt="Slide">
        {% endblock %}</div>
             
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        <div id="content">{% block content %}{% endblock %}</div>
        
        <div id="footer" class="footer">
            {% block footer %}
                &copy; Copyright 2013 by <a href="https://webmail.med.cornell.edu/">Pathology - Weill Cornell Medical College</a>.
            {% endblock %}
        </div>
    </body>
    
    </div>
    
</html>
