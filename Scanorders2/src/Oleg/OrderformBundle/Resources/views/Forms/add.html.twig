{% extends "OlegOrderformBundle::Forms/base.html.twig" %} 

{% form_theme form 'OlegOrderformBundle:Forms:fields.html.twig' %}

{% block content %} 

    <h3>One Slide</h3>
   
    <form action="{{ path('oleg_orderform_slide_add') }}" method="post" {{ form_enctype(form) }} class="AddSlideForm">
        
        {{ form_errors(form.id) }}
        {{ form_errors(form.accession) }}
        {{ form_errors(form.stain) }}
        {{ form_errors(form.mag) }}
        {{ form_errors(form.diagnosis) }}
        {{ form_errors(form) }}

        {{ form_widget(form.id) }}

        {{ form_label(form.accession, '*Accession #:') }}
        {{ form_widget(form.accession) }}

        {{ form_label(form.stain, 'Stain:' ) }}
        {{ form_widget(form.stain) }} 
        
        {{ form_label(form.mag, 'Mag:') }}
        {{ form_widget(form.mag) }}       
        
        {{ form_label(form.diagnosis, 'Diagnosis / Reason for scans:') }}
        {{ form_widget(form.diagnosis) }}
       
        {{ form_rest(form) }}  
        
        <p>
            <button class="btn btn-primary" type="submit">Next</button>        
        </p>
        
    </form>

{% endblock %}