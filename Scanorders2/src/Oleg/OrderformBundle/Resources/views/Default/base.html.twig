{#            '@OlegOrderformBundle/Resources/public/bootstrap-combobox/js/bootstrap-typeahead.js'            #}
{#            '@OlegOrderformBundle/Resources/public/bootstrap-combobox/js/bootstrap-combobox.js'                         #}
{#        %}#}
{#            <script type="text/javascript" src="{{ asset_url }}"></script>#}
{#        {% endjavascripts %}         #}
        {# Bootstrap Combobox #}

    </div>

</body>
         
</html>
