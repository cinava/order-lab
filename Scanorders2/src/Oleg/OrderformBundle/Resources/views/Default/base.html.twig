<!DOCTYPE html>
<html>

<head>
    
    {% if not is_granted('ROLE_USER') %}                        
        <meta http-equiv="refresh" content="0; URL={{ path('login') }}">
    {% endif %}
        
    {% stylesheets 
        '@OlegOrderformBundle/Resources/public/bootstrap/css/*' filter='cssrewrite'
        '@OlegOrderformBundle/Resources/public/form/css/form.css'
        '@OlegOrderformBundle/Resources/public/datepicker/css/*'
    %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
        
    {% endstylesheets %}        
        
    {# Bootstrap Combobox: https://github.com/danielfarrell/bootstrap-combobox  #}
    {# TODO: use 'bundles/acme_foo/css/*' style#}    
    {% stylesheets 
        '@OlegOrderformBundle/Resources/public/bootstrap-combobox/css/*' filter='cssrewrite'                 
    %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}         
       
   {% block head %}                                                                       
        <title>{% block title %}{% endblock %} - Scan Order</title>   
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% endblock %}
        
</head> 
             
<body>

    <div class="container page-content"> 

    <div class="header">
        
        {% block header %}
{#                <img src="{{ asset('/../../images/slide1.jpg') }}" alt="Slide">#}
            {% include 'OlegOrderformBundle:Default:navbar.html.twig' %}
        {% endblock %}
                    
    </div>   

    <div class="order-content">
        
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        
        {% block content %}{% endblock %}
        
    </div>

    <div class="footer">
        {% block footer %}
            &copy; Copyright 2013 by <a href="https://webmail.med.cornell.edu/">Pathology - Weill Cornell Medical College</a>.
        {% endblock %}
    </div>                   
 
    {% javascripts 
        '@OlegOrderformBundle/Resources/public/jquery/*'
        '@OlegOrderformBundle/Resources/public/bootstrap/js/*' 
        '@OlegOrderformBundle/Resources/public/form/js/*'
        '@OlegOrderformBundle/Resources/public/datepicker/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}     

    {# Bootstrap Combobox #}        
    {% javascripts                   
        '@OlegOrderformBundle/Resources/public/bootstrap-combobox/js/*'                    
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}         
    {# Bootstrap Combobox #}             

    </div>

</body>
         
</html>
