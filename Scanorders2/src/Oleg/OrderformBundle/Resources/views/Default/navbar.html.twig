        {#<a#}
            {#&#123;&#35;href="{{ path(scan_sitename~'_home',{'searchtype':searchtype}) }}">{{ searchtype }}&#35;&#125;#}
            {#href="#" onclick="setSearchtypeAction('{{searchtype}}');return false;">{{searchtype}}#}
        {#</a>#}
