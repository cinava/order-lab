{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% block title %}
    Results of load roles from Aperio eSlideManager for all users
{% endblock %}

{% block content %}

    <h3 class="text-info">Results of load roles from Aperio eSlideManager for all users:</h3>

    {% for result in results %}
        User <a href="{{ path(scan_sitename~'_showuser', { 'id': result.user.id }) }}">{{ result.user.getUserNameStr() }}</a>: {{ result.stats }}<br>
    {% endfor %}

    <br>
    <hr>

    {% if notfoundusers|length > 0 %}
        <h3 class="text-info">Users present in this system, but not found in Aperio eSlide Manager:</h3>
        {% for notfounduser in notfoundusers %}
            <a href="{{ path(scan_sitename~'_showuser', { 'id': notfounduser.user.id }) }}">{{ notfounduser.user.getUserNameStr() }}</a><br>
        {% endfor %}
    {% endif %}

    <br>

    <p>
        <a href="{{ path('admin_index') }}">Back to List Manager</a>
    </p>


    <br>

{% endblock %}

