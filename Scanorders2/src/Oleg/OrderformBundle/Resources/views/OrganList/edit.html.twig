{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% import "OlegOrderformBundle::Default/formmacros.html.twig" as myform %}


{% block title %}
    Organ Manager
{% endblock %}


{% block content %}

    <h3 class="text-info">OrganList Edit</h3>


    {{ form_start(edit_form) }}

    {{ myform.field(edit_form.name) }}

    {{ myform.field(edit_form.type) }}

    {{ myform.field(edit_form.creator) }}

    {{ myform.field(edit_form.original) }}

    {{ myform.field(edit_form.createdate) }}

    {{ form(edit_form) }}

    {{ form_end(edit_form) }}

    <p>
        <a href="{{ path('organlist') }}">Back to the list</a>
    </p>

    <div class="record_actions">
        {{ form(delete_form) }}
    </div>

{% endblock %}
