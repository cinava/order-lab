{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Part</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Sourceorgan</th>
                <td>{{ entity.sourceOrgan }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Diagnosis</th>
                <td>{{ entity.diagnosis }}</td>
            </tr>
            <tr>
                <th>Diffdiagnosis</th>
                <td>{{ entity.diffDiagnosis }}</td>
            </tr>
            <tr>
                <th>Diseasetype</th>
                <td>{{ entity.diseaseType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('part') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('part_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('part_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
