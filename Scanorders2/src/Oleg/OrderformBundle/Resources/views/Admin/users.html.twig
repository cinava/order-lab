{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% block content %}

    <h3 class="text-info">User Management</h3>

    <p>
        <a href="{{ path('generate_users') }}">Generate Users from Excel</a>
    </p>
    <br>

    <h3 class="text-info">User List</h3>
    <table class="records_list table">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Display Name</th>
            <th>Email</th>
            <th>Title</th>
            <th>Phone</th>
            <th>Last Login</th>
            <th>Enabled</th>
            <th>Locked</th>
            <th>Expired</th>
            <th>Roles</th>
            <th>Path Services</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('showuser', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.displayName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
                <td>
                    {% if entity.enabled == 1 %}
                        true
                    {% else %}
                        false
                    {% endif %}
                </td>
                <td>
                    {% if entity.locked == 1 %}
                        true
                    {% else %}
                        false
                    {% endif %}
                </td>
                <td>
                    {% if entity.expired == 1 %}
                        true
                    {% else %}
                        false
                    {% endif %}
                </td>
                <td>
                    {% for role in entity.roles %}

                        {#{{ role }}#}
                        {% if role != "ROLE_USER" %}
                            "{{ attribute(roles, role) }}"
                        {% endif %}

                    {% endfor %}
                </td>
                <td>
                    {% for pathologyServices in entity.pathologyServices %}
                        "{{ pathologyServices }}"
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('fos_user_registration_register') }}">
        Create a new entry
    </a>

    <br>

{% endblock %}

