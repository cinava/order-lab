{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% block content %}

    <h3 class="text-info">Users</h3>
    <table class="records_list table table-hover table-condensed text-left">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(entities, 'ID', 'user.id') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'User', 'user.username') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Name', 'user.displayName') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Email', 'user.email') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Title', 'user.title') }}</th>
            <th style="min-width: 120px">{{ knp_pagination_sortable(entities, 'Phone', 'user.phone') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Last Login', 'user.lastLogin') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Locked', 'user.locked') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Roles', 'user.roles') }}</th>
            <th>{{ knp_pagination_sortable(entities, 'Service / Division', 'pathologyServices.name') }}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody data-link="row" class="rowlink">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('showuser', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.displayName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
                <td>
                    {% if entity.locked == 1 %}
                        true
                    {% else %}
                        false
                    {% endif %}
                </td>
                <td>
                    {% for role in entity.roles %}
                        {% if role != "ROLE_USER" %}
                            "{{ attribute(roles, role) }}"
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {% for pathologyServices in entity.pathologyServices %}
                        "{{ pathologyServices }}"<br>
                    {% endfor %}
                </td>

                <td class="rowlink-skip">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Action <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-right">

                            <li><a href="{{ path('showuser', { 'id': entity.id }) }}">View Details</a></li>


                            {% if app.security.getToken().getUser().getId() != entity.id %}

                                {% if entity.locked == 0 %}
                                    <li><a onclick="return confirm('Are you sure?');"
                                           href="{{ path('accessrequest_change', { 'id': entity.id, 'status': 'declined', 'role': 'declined' }) }}">Lock</a>
                                    </li>
                                {% else %}
                                    <li><a onclick="return confirm('Are you sure?');"
                                           href="{{ path('accessrequest_change', { 'id': entity.id, 'status': 'approved', 'role': 'external' }) }}">Unlock</a>
                                    </li>
                                {% endif %}

                            {% endif %}

                        </ul>

                    </div>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>


    <br>
    <h3 class="text-info">User Management</h3>

    <p>
        <a href="{{ path('generate_users') }}">Generate Users from Excel</a>
    </p>

    <a href="{{ path('fos_user_registration_register') }}">
        Create a new entry
    </a>

    <br>

{% endblock %}

