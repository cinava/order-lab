{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% import "OlegOrderformBundle::Default/formmacros.html.twig" as myform %}

{% block title %}
    Request an Aperio eSlide Manager Account
{% endblock %}

{% block content %}

    <h2 class="alert alert-info well-lg safary-fix" align="center">Scan Order Submission</h2>

    <h3 class="text-info">Request an Aperio eSlide Manager Account</h3>
    <br>

    <input type="hidden" id="formcicle" value="edit_user" />

    <form action="{{ path('accountrequest_create') }}" method="post" {{ form_enctype(form) }}>

        {{ form_errors(form) }}

        <p>
        <div class="row">
            <div class="col-xs-6" align="right">
                <b>I have a <a href="javascript:;" onclick="window.open('http://weill.cornell.edu/its/identity-security/identity/cwid/');return false;">CWID</a>:</b>
            </div>
            <div class="col-xs-6" align="left">
                {{ form_widget(form.cwidyesno) }}
            </div>
        </div>
        {#{{ myform.field(form.cwidyesno) }}#}
        </p>

        <p>
        <div class="row">
            <div class="col-xs-6" align="right">
                {#<a href="#" onclick="window.open('http://weill.cornell.edu/its/identity-security/identity/cwid/');return false;">{{ form_label(form.cwid) }}</a>#}
                {{ form_label(form.cwid) }}
            </div>
            <div class="col-xs-6" align="left">
                {{ form_widget(form.cwid) }}
            </div>       
        </div>
        </p>

        {{ myform.field(form.name) }}
        {{ myform.field(form.email) }}
        {{ myform.field(form.phone) }}
        {{ myform.field(form.job) }}
        {{ myform.field(form.organization) }}
        {{ myform.field(form.department) }}
        {{ myform.field(form.pathologyServices) }}
        {{ myform.field(form.request) }}

        {% do form.creationdate.setRendered %}
                    
        {#{{ form_rest(form) }}#}
        {{ form_widget(form._token) }}

        <br>
        <p>
            <button class="btn btn-info" type="submit">Submit account request</button>
        </p>
    </form>


{% endblock %}




