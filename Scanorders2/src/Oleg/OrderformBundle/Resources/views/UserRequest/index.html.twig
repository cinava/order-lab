{% extends "OlegOrderformBundle::Default/base.html.twig" %} 

{% block title %}
    User Request List
{% endblock %}

{% block content %} 

    <h3 class="text-info">User Request List</h3>

    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Cwid</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Job</th>
                <th>Organization</th>
                <th>Department</th>
                <th>Service / Division</th>
                <th>Reason for account request</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            
            {% if entity.status == 'active' %}
                <tr class="activetr" >
            {% elseif entity.status == 'declined' %}
                <tr class="canceltr" >
            {% elseif entity.status == 'accepted' %}
                <tr class="completedtr" >
            {% elseif entity.status == 'uncompleted' %}
                <tr class="uncompletedtr" >
            {% else %}
                <tr>
            {% endif %}
                <td><a href="{{ path('accountrequest_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.cwid }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.job }}</td>
                <td>{{ entity.organization }}</td>
                <td>{{ entity.department }}</td>
                <td>{{ entity.pathologyService }}</td>
                <td> {{ entity.request[:10] ~ '...' }}</td>
                <td>
                    
{#                <a class="btn" href="{{ path('accountrequest_show', { 'id': entity.id }) }}">Show</a>#}
                   
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                          Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" style="left: -100%;">

                            <li><a href="{{ path('accountrequest_show', { 'id': entity.id }) }}">View Details</a></li>

                            <li class="divider"></li>

                            {% if entity.status != 'declined' %}
                                <li><a onclick="return confirm('Are you sure?');"
                                       href="{{ path('accountrequest_status', { 'id': entity.id, 'status': 'declined' }) }}">Decline</a>
                                </li>                  
                            {% endif %}                                                                

                            {% if entity.status != 'active' %}
                                <li><a onclick="return confirm('Are you sure?');" 
                                       href="{{ path('accountrequest_status', { 'id': entity.id, 'status': 'active' }) }}">Active</a>
                                </li>                  
                            {% endif %}

                            {% if entity.status != 'completed' %}
                                <li><a onclick="return confirm('Are you sure?');" 
                                       href="{{ path('accountrequest_status', { 'id': entity.id, 'status': 'accepted' }) }}">Accept</a>
                                </li>                  
                            {% endif %}
                         

                        </ul>
                   </div>
                    
                    
                    
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
    {% endblock %}
