{% extends "OlegOrderformBundle::Default/base.html.twig" %} 

{% block title %}
    User Request
{% endblock %}

{% block content %}
    <h3 class="text-info">User Request</h3>

    <table class="table table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Cwid</th>
                <td>{{ entity.cwid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ entity.organization }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ entity.department }}</td>
            </tr>
            <tr>
                <th>Service(s)/Division</th>
                <td>{{ entity.pathologyService }}</td>
            </tr>
            <tr>            
                <th>Request</th>
                {#<td>#}
                    {#<textarea rows="4" cols="50">#}
                        {#{{ entity.request }}#}
                    {#</textarea>#}
                    {##}
                {#</td>             #}
                <td>
                    <textarea class="textarea form-control form-control-modif">{{ entity.request }}</textarea>
                </td>
            </tr>
        </tbody>
    </table>

    <p>
        <a href="{{ path('accountrequest') }}">
            Back to the list
        </a>
    </p>
    
    {#<form action="{{ path('accountrequest_delete', { 'id': entity.id }) }}" method="post">#}
        {#<input type="hidden" name="_method" value="DELETE" />#}
        {#{{ form_widget(delete_form) }}#}
        {#<button type="submit">Delete</button>#}
    {#</form>#}
{% endblock %}
