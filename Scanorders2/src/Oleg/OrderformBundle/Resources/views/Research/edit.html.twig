
{% import "OlegOrderformBundle::Default/formmacros.html.twig" as myform %}


<h3 class="text-info">Research</h3>

{{ form_start(edit_form) }}

    {% include 'OlegOrderformBundle::DataReview/orderinfo.html.twig' %}

    {{ myform.simplefield( "Research Project Title:", entity.projectTitle.name, "input", "disabled" ) }}

    {% for title in entity.projectTitle.setTitles %}
        {{ myform.simplefield( "Research Project Title:", title, "input", "disabled" ) }}
    {% endfor %}

    <hr>
        {{ myform.field(edit_form.projectTitle.primaryPrincipal) }}
    <hr>

    {% for principal in edit_form.principals %}
        {{ myform.field(principal.name) }}
        {{ myform.field(principal.principal) }}
        <hr>
    {% endfor %}

    <hr>

    {% do edit_form.projectTitle.setRendered %}

    {{ form(edit_form) }}
    {{ form_rest(edit_form) }}

{{ form_end(edit_form) }}
