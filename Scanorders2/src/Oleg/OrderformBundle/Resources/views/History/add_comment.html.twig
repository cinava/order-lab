
{% block addcomment %}

<!-- Modal -->
<div class="modal fade" id="addComment_{{ orderid }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close comment_modal_close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Comment for Order {{ orderid }}</h4>
            </div>
            <div class="modal-body">

                <div id="modal_error_{{ orderid }}" class="modal_error_div"></div>

                {#<form id="addcomment" action="{{ path('history_orderinfo_new',{ 'id': orderid }) }}" method="post">#}
                {#<form id="addcomment" onsubmit="submitNewComment( {{ orderid }} )">#}
                <form id="addcomment_form">

                    {% if is_granted('ROLE_PROCESSOR') %}

                        <select class="combobox">
                            <option></option>
                            <option value="Slide(s) damaged and can not be scanned">Slide(s) damaged and can not be scanned</option>
                            <option value="Slide(s) returned before being scanned">Slide(s) returned before being scanned</option>
                            <option value="Slide(s) could not be scanned due to focusing issues">Slide(s) could not be scanned due to focusing issues</option>
                        </select>

                        <br><br>

                    {% endif %}

                    <div class="row">
                        <div class="col-xs-12">

                            <p>
                                {#<textarea  type="textarea" class="textarea form-control">#}
                                <input type="hidden" id="baseurl" value="{{app.request.host}}{{app.request.getBaseURL()}}" />
                                <textarea id="addcomment_text" name="addcomment" type="textarea" class="textarea form-control" maxlength="5000" required></textarea>
                            </p>

                        </div>
                    </div>

                    {#<button class="btn btn-primary" type="submit">Add Comment</button>#}
                    {#<button class="btn btn-primary" onclick="submitNewComment({{ orderid }});">Add Comment</button>#}
                    <input id="AddNewComment" class="btn btn-primary" type="button" value="Add Comment" onclick="submitNewComment({{ orderid }});" />

                </form>

            </div>
            {#<div class="modal-footer">#}
                {#<button type="button" class="btn btn-default comment_modal_close" data-dismiss="modal">Close</button>#}
                {#&#123;&#35;<button type="button" class="btn btn-primary">Add Comment</button>&#35;&#125;#}
            {#</div>#}
        </div>
    </div>
</div>


{% endblock %}
