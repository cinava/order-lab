    <a class="btn btn-success" href="{{ path('user_edit',{'id':user.id}) }}">Edit</a>

    {% if is_granted('ROLE_SCANORDER_ADMIN') %}
        <br><br>
        <p>
            <a href="{{ path('listusers') }}">All Users</a>
        </p>
    {% endif %}

</div>

{% endblock %}
