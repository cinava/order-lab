{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Slide</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Diagnosis</th>
                <td>{{ entity.diagnosis }}</td>
            </tr>
            <tr>
                <th>Microscopicdescr</th>
                <td>{{ entity.microscopicdescr }}</td>
            </tr>
            <tr>
                <th>Specialstain</th>
                <td>{{ entity.specialstain }}</td>
            </tr>
            <tr>
                <th>Relevantscan</th>
                <td>{{ entity.relevantscan }}</td>
            </tr>           
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('slide') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('slide_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('slide_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
