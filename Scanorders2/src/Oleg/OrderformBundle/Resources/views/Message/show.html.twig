{% extends "OlegOrderformBundle::Default/base.html.twig" %}

{% import "OlegOrderformBundle::Default/formmacros.html.twig" as formmacros %}

{% block title %}
    {{ formtype }}
{% endblock %}


{% block content %}

    <h4 class="text-info">{{ formtype }}</h4>
    <br>

    <p>
        {#{{ formmacros.simplefield( "Message Category:", entity.messageCategory, "", "disabled" ) }}#}
        {{ formmacros.simplefield( "Message ID:", entity.id, "", "disabled" ) }}
        {{ formmacros.simplefield( "Generation Date:", entity.orderdate|date('m/d/Y'), "", "disabled" ) }}

        {#{{ formmacros.field_show_user( entity, "provider", cycle ) }}#}
        {% set hreflink = '<a href="'~path(scan_sitename~'_showuser', { 'id': entity.provider.id })~'">'~entity.provider.getUserNameStr()~'</a>' %}
        {{ formmacros.simplefield( "Submitter:", hreflink, "", "disabled" ) }}

        {{ formmacros.showUserWrapperAsSimpleField( entity.proxyuser, "Signing Provider(s):" ) }}

        {{ formmacros.showUserWrapperAsSimpleField( entity.orderRecipients, "Order Recipient(s):" ) }}

        {{ formmacros.showUserWrapperAsSimpleField( entity.reportRecipients, "Report Recipient(s):" ) }}

    </p>

{% endblock %}