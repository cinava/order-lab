{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Educational list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>             
                <th>Course Title</th>
                <th>Lesson Title</th>
				<th>Course Director</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('educational_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.course }}</td>
                <td>{{ entity.lesson }}</td>
				<td>{{ entity.director }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('educational_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('educational_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('educational_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
