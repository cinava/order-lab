{

  "variables": {
        "ssh_name": "root"
  },	

  "builders": [{
    "type": "digitalocean",
    "api_token": "api_token_bash_value",
    "region": "nyc3",
    "size": "2gb",
    "image": "rockylinux-9-x64",
    "ssh_username": "{{user `ssh_name`}}"  
  }],

  "provisioners": [
  
	{
        "type": "shell",
		"environment_vars": [
			"bashdbuser=bash_dbuser",
			"bashdbpass=bash_dbpass"
		],
        "script": "alma9_install.sh"
    }
      
   ]

}
