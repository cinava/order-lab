{#{% extends "AppUserdirectoryBundle/Default/base.html.twig" %}#}

{% set extendStr = "AppUserdirectoryBundle/Default/base.html.twig" %}

{% if sitename == 'employees' %}
    {% set extendStr = "AppUserdirectoryBundle/Default/base.html.twig" %}
{% elseif sitename == 'fellapp' %}
    {% set extendStr = "AppFellAppBundle/Default/base.html.twig" %}
{% elseif sitename == 'resapp' %}
    {% set extendStr = "AppResAppBundle/Default/base.html.twig" %}
{% elseif sitename == 'deidentifier' %}
    {% set extendStr = "AppDeidentifierBundle/Default/base.html.twig" %}
{% elseif sitename == 'vacreq' %}
    {% set extendStr = "AppVacReqBundle/Default/base.html.twig" %}
{% elseif sitename == 'calllog' %}
    {% set extendStr = "AppCallLogBundle/Default/base.html.twig" %}
{% elseif sitename == 'crn' %}
    {% set extendStr = "AppCrnBundle/Default/base.html.twig" %}
{% elseif sitename == 'translationalresearch' %}
    {% set extendStr = "AppTranslationalResearchBundle/Default/base.html.twig" %}
{% endif %}

{% extends extendStr%}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            {% if mobilePhoneVerified %}
                <br><br>
                <p class="text-success">Mobile phone number is already verified</p>
            {% else %}
                <p class="text-danger">Mobile phone number is not verified</p>

                <input id="phoneNumberToVerify" type="hidden" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">
                <p>
                    <button
                            id="send-verification-code-button"
                            type="button" class="btn btn-success send-verification-code"
                            onclick="sendVerificationCode({{ phoneNumber }});"
                    >Send Verification Code to {{ phoneNumber }}</button>
                </p>
            {% endif %}

            {#<a href="{{ path(employees_sitename~'_showuser', { 'id': app.user.getId }) }}">profile</a>#}
            {#<form action="{{ url('employees_verify_mobile_phone_ajax') }}" method="get">#}
            {#<form action="{{ path('employees_verify_mobile_phone_ajax',{'phoneNumber': phoneNumber}) }}" method="get">#}
                {#<input type="hidden" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">#}
                {#<p>#}
                    {#<button type="submit" class="btn btn-success send-verification-code">Send Verification Code to {{ phoneNumber }}</button>#}
                {#</p>#}
            {#</form>#}

        </div>

        <div class="col-md-3">
        </div>
    </div>

    <br><br>

    {% if not mobilePhoneVerified %}
        <div class="row">

            <div class="col-md-4">
            </div>

            <div class="col-md-4">

                <form action="{{ url('employees_verify_code') }}" method="get">
                    <input type="hidden" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">
                    <div class="form-group">
                        <input type="text" class="form-control" name="verify_code" placeholder="Enter code here">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Verify Now</button>
                    </div>
                </form>

            </div>

            <div class="col-md-4">
            </div>

        </div>
    {% endif %}

{% endblock %}
