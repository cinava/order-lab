<div class="modal fade" id="verifyMobilePhoneModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">Mobile phone number verification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {#modal-header#}

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-1">
                    </div>

                    {% set mobilePhoneVerified = false %}

                    <div class="col-md-10">

                        <div id="phone-number-verify-status-modal">
                            {% if mobilePhoneVerified %}
                                <p class="text-success">Mobile phone number verified</p>
                            {% else %}
                                <p class="text-danger">Mobile phone number is not verified</p>
                            {% endif %}
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-btn">
                                <button
                                        id="send-verification-code-button-modal"
                                        type="button" class="btn btn-success send-verification-code-button-modal"
                                        onclick="sendVerificationCode($('#phoneNumberToVerify').val());"
                                >Send Verification Code to</button>
                            </div>
                            <input id="phoneNumberToVerify" class="form-control phone-mask" name="phoneNumber" value="{{ phoneNumber }}">
                        </div>

                    </div>

                    <div class="col-md-1">
                    </div>
                </div>

                <br><br>

                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">

                        <div class="input-group mb-3">
                            <input id="phone-number-verification-code" type="text" class="form-control" name="verify_code" placeholder="Verification Code">
                            <div class="input-group-btn">
                                <button
                                        id="verify-code-button"
                                        type="button" class="btn btn-success verify-code-button"
                                        onclick="verifyPhoneNumberCode({{ phoneNumber }},$('#phone-number-verification-code').val());"
                                >Verify</button>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                </div>

            </div>
            {#modal-body#}

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {#<button type="button" class="btn btn-primary">Save changes</button>#}
            </div>
            {#modal-footer#}

        </div>
        {#modal-content#}

    </div>
</div>

