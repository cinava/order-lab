<div class="modal fade" id="verifyMobilePhoneModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <h5 style="text-align:center" class="modal-title" id="exampleModalLabel">Mobile phone number verification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {#modal-header#}

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-1">
                    </div>

                    {% set mobilePhoneVerified = false %}

                    <div class="col-md-10">

                        <div id="phone-number-verify-status-modal">
                            {% if mobilePhoneVerified %}
                                <p class="text-success">Mobile phone number verified</p>
                            {% else %}
                                <p class="text-danger">Mobile phone number is not verified</p>
                            {% endif %}
                        </div>

                        {#<input id="phoneNumberToVerify" type="hidden" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">#}
                        {#<p>#}
                            {#<button#}
                                    {#id="send-verification-code-button-modal"#}
                                    {#type="button" class="btn btn-success send-verification-code-button-modal"#}
                                    {#onclick="sendVerificationCode({{ phoneNumber }});"#}
                            {#>Send Verification Code to {{ phoneNumber }}</button>#}
                        {#</p>#}

                        {#<p>#}
                            {#<button#}
                                    {#id="send-verification-code-button-modal"#}
                                    {#type="button" class="btn btn-success send-verification-code-button-modal"#}
                                    {#onclick="sendVerificationCode($('phoneNumberToVerify').val());"#}
                            {#>Send Verification Code to</button>#}
                            {#<input id="phoneNumberToVerify" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">#}
                        {#</p>#}

                        {#<div class="input-group mb-3">#}
                            {#<div class="input-group-prepend">#}
                                {#<span class="input-group-text" id="basic-addon1">@</span>#}
                            {#</div>#}
                            {#<input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">#}
                        {#</div>#}
                        <div class="input-group mb-3">
                            <div class="input-group-btn">
                                <button
                                        id="send-verification-code-button-modal"
                                        type="button" class="btn btn-success send-verification-code-button-modal"
                                        onclick="sendVerificationCode($('#phoneNumberToVerify').val());"
                                >Send Verification Code to</button>
                            </div>
                            <input id="phoneNumberToVerify" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">
                        </div>

                    </div>

                    <div class="col-md-1">
                    </div>
                </div>

                <br><br>

                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">

                        {#<form action="{{ url('employees_verify_code') }}" method="get">#}
                            {#<input type="hidden" class="form-control" name="phoneNumber" value="{{ phoneNumber }}">#}
                            {#<div class="form-group">#}
                                {#<input type="text" class="form-control" name="verify_code" placeholder="Enter code here">#}
                            {#</div>#}

                            {#<div class="form-group">#}
                                {#<button type="submit" class="btn btn-success">Verify Now</button>#}
                            {#</div>#}
                        {#</form>#}

                        {#<p>#}
                            {#<input style="width: 80%" id="phone-number-verification-code" type="text" class="form-control" name="verify_code" placeholder="Enter code here">#}

                            {#<button#}
                                    {#id="verify-code-button"#}
                                    {#type="button" class="btn btn-success verify-code-button"#}
                                    {#onclick="verifyPhoneNumberCode({{ phoneNumber }},$('#phone-number-verification-code').val());"#}
                            {#>Verify Now</button>#}
                        {#</p>#}

                        <div class="input-group mb-3">
                            <input id="phone-number-verification-code" type="text" class="form-control" name="verify_code" placeholder="Enter code here">
                            <div class="input-group-btn">
                                <button
                                        id="verify-code-button"
                                        type="button" class="btn btn-success verify-code-button"
                                        onclick="verifyPhoneNumberCode({{ phoneNumber }},$('#phone-number-verification-code').val());"
                                >Verify</button>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-3"></div>
                </div>

            </div>
            {#modal-body#}

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {#<button type="button" class="btn btn-primary">Save changes</button>#}
            </div>
            {#modal-footer#}

        </div>
        {#modal-content#}

    </div>
</div>



