{% extends "AppUserdirectoryBundle/Default/base.html.twig" %}

{% block title %}
    List users with notify users/emails
{% endblock %}


{% block content %}

    <h3 class="text-info">
        List users with notify users/emails.
    </h3>
    <p>All emails will be redirected to the notify emails. Email will not be sent to the original user's email.</p>

    <br>

    {% for user in users %}
        <p>
            ID {{ user.id }}
            <a href="{{ path(employees_sitename~'_showuser', { 'id': user.id }) }}"
            >{{ user }}</a> Notify emails: {{ user.getSingleEmail() }}
        </p>
    {% endfor %}

{% endblock %}