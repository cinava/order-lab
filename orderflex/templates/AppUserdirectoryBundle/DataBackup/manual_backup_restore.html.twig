{% set extendStr = "AppUserdirectoryBundle/Default/base.html.twig" %}
{% extends extendStr %}


{% import "AppOrderformBundle/Default/formmacros.html.twig" as formmacros %}


{% block title %}
    {{ title }}
{% endblock %}



{% block content %}

    <input type="hidden" id="formcycle" value="{{ cycle }}" />
    <input type="hidden" id="fileId" value="" />

    <h4 class="text-info" align="center">{{ title }}</h4>

    <br>
    <br>

    <p>
        <div class="well">Current Network Drive Path: {{ networkDrivePath }}</div>
    </p>

    <p>
        <a class="btn btn-info" href="{{ path(employees_sitename~'_create_backup') }}">Create Backup</a>
    </p>

    <br>

    {#{% if backupFiles %}#}

        <div class="row">
            <div class="col-xs-3"></div>
            <div class="col-xs-6">
                {#{{ formmacros.field(backupFiles) }}#}
                <p>
                    <select id="backup-file-id" class="combobox" style="width: 30%;">
                        {% for  backupFile in backupFiles %}
                            <option value="{{ backupFile.id }}">{{ backupFile.name }}</option>
                        {% endfor %}
                    </select>
                </p>
            </div>
            <div class="col-xs-3"></div>
        </div>

        <br>

        {#<p>#}
            {#<a class="btn btn-danger" href="{{ path(employees_sitename~'_restore_backup') }}">Restore Backup</a>#}
        {#</p>#}

        {% set disabledFalg = 'disabled' %}
        {% if backupFiles|length > 0 %}
            {% set disabledFalg = '' %}
        {% endif %}
        <p>
            <a
                id="btn-restore-backup"
                class="btn btn-danger"
                {#general-data-confirm="Are you sure you want to restore backup DB? This action will overwrite all existing data."#}
                {#href="{{ path(employees_sitename~'_restore_backup',{'backupFilePath': document.getElementById("fileId").val()}) }}"#}
                href="#"
                {{ disabledFalg }}
                onclick="return restoreBackup();"
            >Restore Backup</a>
        </p>

    {#{% else %}#}
        {#<div class="alert alert-danger">Backup folder does not exists or empty</div>#}
    {#{% endif %}#}


{% endblock %}


{% block additionaljs %}

    <script>
        $(document).ready(function () {

            $('#backup-file-id').on("change", function(e) {
                var fileId = $(this).select2('val');
                if( fileId ) {
                    console.log('fileId=' + fileId);
                    $('#fileId').val(fileId);
                    $('#btn-restore-backup').removeAttr('disabled');
                } else {
                    console.log('No file selected');
                    $('#btn-restore-backup').attr('disabled', true);
                }
            });

        });

        function restoreBackup() {
            var result = confirm("Are you sure you want to load backup DB? This action will overwrite all existing data.");
            if (result) {
                //Logic to delete the item
            } else {
                return;
            }

            var file = $('#backup-file-id').select2('data');
            if( file ) {
                var fileId = file.id;
                console.log("fileId=" + fileId);

                var url = Routing.generate('employees_restore_backup');
                url = url + "/" + fileId;
                console.log("url=" + url);

                window.location.replace(url);
            } else {
                console.log("no backup file");
            }
        }
    </script>

{% endblock %}
