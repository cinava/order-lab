{% macro cronStatusCreateAuto( backupEntityField ) %}
    {% set cronJobNames = user_service_utility.getBackupManageCronLinux(backupEntityField) %}
    {% for cronJobName in cronJobNames %}
        {{ _self.cronStatusCreate(cronJobName) }}
    {% endfor %}
{% endmacro %}
{% macro cronStatusCreate( cronJobName ) %}
    <table class="table table-bordered table-hover table-condensed text-left">
        <thead>
        <tr>
            <th>Parameter</th>
            <th>Value</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody data-link="row" class="rowlink">
            <tr>
                <td class="rowlink-skip">{{ cronJobName }} cron job</td>
                <td class="rowlink-skip">
                    {{ user_service_utility.getCronStatus(cronJobName,false)|raw }}
                </td>

                <td class="rowlink-skip">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            Action <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-right">

                            <li>
                                <a general-data-confirm="Are you sure you would like to remove this cron job?"
                                   href="{{ path('user_remove_cron_job', {'cronJobName': cronJobName}) }}">Remove</a>
                            </li>

                            <li>
                                <a  general-data-confirm="Are you sure? This action will generate {{ cronJobName }} cron job."
                                    href="{{ path('user_generate_cron_'~cronJobName) }}"
                                >Generate {{ cronJobName }} cron job</a>
                            </li>

                        </ul>

                    </div>
                </td>
            </tr>
        </tbody>
    </table>
{% endmacro %}

