{% extends "AppVacReqBundle/Default/base.html.twig" %}

{% import "AppOrderformBundle/Default/formmacros.html.twig" as formmacros %}

{% block title %}
    Carry Over Vacation Days for {{ subjectUser }}
{% endblock %}


{% block content %}


    <h4 class="text-info" align="center">
        Carry Over Vacation Days for {{ subjectUser }}
    </h4>

    <br>

    {{ form_start(form) }}

        {{ form_errors(form) }}

        {#{% for carryOver in form.carryOvers %}#}
        {#order by year: the most recent year on top#}
        {% for carryOver in form.carryOvers|sort((a, b) => b.vars.value.year <=> a.vars.value.year) %}

            <div class="well well-sm">
                {#ID:{{ carryOver.vars.value.id }}#}
                {% set yearRange = carryOver.vars.value.getYearRange() %}
                {{ formmacros.simplefield( "Destination Academic Year:", yearRange, "input", "disabled" ) }}

                {{ formmacros.field(carryOver.days) }}
            </div>

        {% endfor %}

        <p>
            <button class="btn btn-info" name="btnCreate" type="submit">Update</button>
        </p>

    {#{{ form_end(form,{'render_rest': false}) }}#}
    {{ form_end(form) }}

{% endblock %}

