{% extends "AppResAppBundle/Default/base.html.twig" %}

{% import "AppOrderformBundle/Default/formmacros.html.twig" as formmacros %}
{% import "AppUserdirectoryBundle/Default/usermacros.html.twig" as usermacros %}


{% block title %}
    {{ title }}
{% endblock %}


{% block content %}

    <h4 class="text-info resapp-title" align="center">
        {{ title|raw }}
    </h4>

    <br>

    <input type="hidden" id="formcycle" value="{{ cycle }}" />

    {{ form_start(form) }}

        {{ form_errors(form) }}

        {# Defaults #}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#resapp-Defaults">
                        E-mail Notifications
                    </a>
                </h4>
            </div>
            <div id="resapp-Defaults" class="panel-collapse collapse in">
                <div class="panel-body">

                    <p>
                        Please use naming notation:
                        <br>[[APPLICANT NAME]] - applicant name
                        <br>[[START YEAR]] - start year of the training period
                        <br>[[RESIDENCY TYPE]] - residency application type
                        <br>[[INSTITUTION]] - application institution
                    </p>

                    {{ formmacros.field(form.acceptedEmailSubject) }}

                    {{ formmacros.field(form.acceptedEmailBody) }}

                    {{ formmacros.field(form.rejectedEmailSubject) }}

                    {{ formmacros.field(form.rejectedEmailBody) }}

            </div> <!-- panel-body -->
          </div> <!-- panel-collapse -->
        </div> <!-- panel panel-primary -->
        {# EOF Entry #}

        {#{{ form_row(form._token) }}#}
        {#{{ form_rest(form) }}#}

    {{ form_end(form) }}

    {% if cycle == "show" %}
        {#<br>#}
        <p>
            <a class="btn btn-primary" href="{{ path('resapp_siteparameters_edit_specific_site_parameters') }}">Edit</a>
        </p>
    {% endif %}


{% endblock %}

