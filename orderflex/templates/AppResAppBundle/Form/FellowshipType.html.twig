{% import "AppOrderformBundle/Default/formmacros.html.twig" as formmacros %}

{% if collapsein is not defined %}
    {% set collapsein = "in" %}
{% endif %}

<!-- Residency Type -->
<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#residencyTypePanel">
                Residency Type
            </a>
        </h4>
    </div>
    <div id="residencyTypePanel" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

            {{ form_row(form.residencySubspecialty) }}

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->
</div> <!-- panel panel-info -->

<!-- Training period -->
<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#trainingPeriod">
                Training period for which applying
            </a>
        </h4>
    </div>
    <div id="trainingPeriod" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-6">
                    {{ formmacros.fieldDateLabel_vertical(form.startDate,'allow-future-date') }}
                </div>
                <div class="col-xs-6">
                    {{ formmacros.fieldDateLabel_vertical(form.endDate,'allow-future-date') }}
                </div>
            </div> <!-- row -->
        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->
</div> <!-- panel panel-info -->




<!-- Applicant Name -->
<div class="panel panel-info">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#applicantName">
                Applicant Name
            </a>
        </h4>
    </div>

    <div id="applicantName" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">
            {% for info in form.user.infos %}

            <div class="row">
                <div class="col-xs-4">
                    {% if is_granted('ROLE_PLATFORM_DEMO') %}
                        Demo
                    {% else %}
                        {{ form_row(info.firstName) }}
                    {% endif %}
                </div>
                <div class="col-xs-4">
                    {% if is_granted('ROLE_PLATFORM_DEMO') %}
                        Applicant
                    {% else %}
                        {{ form_row(info.lastName) }}
                    {% endif %}
                </div>
                <div class="col-xs-4">
                    {% if is_granted('ROLE_PLATFORM_DEMO') %}
                        The
                    {% else %}
                        {{ form_row(info.middleName) }}
                    {% endif %}
                </div>
            </div> <!-- row -->

            {% endfor %}

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->