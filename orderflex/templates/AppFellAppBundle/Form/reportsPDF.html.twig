{% import "AppUserdirectoryBundle/Default/usermacros.html.twig" as usermacros %}

{% if collapsein is not defined %}
    {% set collapsein = "in" %}
{% endif %}

{#{% if is_granted('ROLE_FELLAPP_COORDINATOR') %}#}
<div class="panel panel-info">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#complete-reports">
                Complete Application PDF: Will be automatically generated if left empty
            </a>
        </h4>
    </div>

    <div id="complete-reports" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

                <div class="well form-element-holder user-Report">
                    {#<label class="col-xs-12 control-label">Complete Fellowship Application PDF</label>#}
                    <div class="row withpaddingtop">
                        <div class="col-xs-12">

                            {{ usermacros.documentsContainer(null,form.reports,cycle,'noprototype',8,'default','Complete Fellowship Application PDF') }}

                        </div>
                    </div>
                </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->

{#Application without attached documents#}
<div class="panel panel-default">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#form-reports">
                Application PDF without attached documents: Will be automatically generated if left empty
            </a>
        </h4>
    </div>

    <div id="form-reports" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

            <div class="well form-element-holder user-FormReport">
                {#<label class="col-xs-12 control-label">Complete Fellowship Application PDF</label>#}
                <div class="row withpaddingtop">
                    <div class="col-xs-12">

                        {{ usermacros.documentsContainer(null,form.formReports,cycle,'noprototype',8,'default','Fellowship Application PDF Without Attached Documents') }}

                    </div>
                </div>
            </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->


{% if cycle != "new" %}
<div class="panel panel-default">

    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#complete-oldreports">
                Old Complete Application PDF(s)
            </a>
        </h4>
    </div>

    <div id="complete-oldreports" class="panel-collapse collapse {{ collapsein }}">
        <div class="panel-body">

            <div class="well form-element-holder user-OldReport">
                <div class="row withpaddingtop">
                    <div class="col-xs-12">

                        {{ usermacros.documentsContainer(null,form.oldReports,cycle,'noprototype',8,'default','Old Complete Fellowship Application PDF') }}

                    </div>
                </div>
            </div>

        </div> <!-- panel-body -->
    </div> <!-- panel-collapse -->

</div> <!-- panel panel-info -->
{% endif %}


