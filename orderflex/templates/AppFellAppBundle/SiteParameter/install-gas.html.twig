{% extends "AppUserdirectoryBundle/Default/base.html.twig" %}

{% block title %}
    Send a test email
{% endblock %}


{% block content %}

    {#Show the path where GAS will be installed#}
    
    <form action="{{ path('fellapp_install_gas') }}" method="post">

        <div class="row">
            <div class="col-xs-6" align="right">
                <strong>
                    Parameters to install Google Script: <br>
                    --dir: local folder to keep local copies of the scripts. The scripts will be install inside folder order-lab\utils\google-integration\scripts<br>
                    --title: title of a new Google scripts<br>
                    i.e.: python fellapp.py --dir MyFellAppTest --title MyFellAppTest
                </strong>
            </div>
            <div class="col-xs-6" align="left">
                <input type="text" class="form-control" name="params">
            </div>
        </div>

        <br>
        <input class="btn btn-primary" type="submit">
    </form>

{% endblock %}